<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.FlashyFrogs.controllers.ConfirmationController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="800.0">
         <center>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Thank you for your feedback!" BorderPane.alignment="CENTER">
               <font>
                  <Font size="36.0" />
               </font>
            </Text>
         </center>
         <bottom>
            <AnchorPane prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="BOTTOM_RIGHT" prefWidth="800.0">
                     <children>
                        <MFXButton fx:id="home" onAction="#homeButton" prefWidth="100.0" text="Home">
                           <VBox.margin>
                              <Insets bottom="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </MFXButton>
                        <Accordion />
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </bottom>
         <top>
            <MFXButton fx:id="question" onAction="#handleQ" text="?" BorderPane.alignment="TOP_RIGHT">
               <BorderPane.margin>
                  <Insets right="10.0" top="10.0" />
               </BorderPane.margin>
            </MFXButton>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
