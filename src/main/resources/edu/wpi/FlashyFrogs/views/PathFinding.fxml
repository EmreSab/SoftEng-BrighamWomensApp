<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import io.github.palexdev.materialfx.controls.MFXFilterComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.FlashyFrogs.controllers.PathFindingController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="118.0" prefWidth="800.0">
               <children>
                  <VBox alignment="TOP_RIGHT" prefHeight="118.0" prefWidth="250.0" />
                  <VBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="118.0" prefWidth="300.0" spacing="5.0">
                     <children>
                        <MFXFilterComboBox fx:id="start" prefHeight="40.0" prefWidth="280.0" promptText="Start" />
                        <MFXFilterComboBox fx:id="end" prefHeight="40.0" prefWidth="280.0" promptText="End" />
                        <MFXComboBox fx:id="floorSelector" promptText="Floor" />
                        <Label fx:id="error" textFill="RED" />
                        <AnchorPane fx:id="mapPane1" prefHeight="332.0" prefWidth="800.0" VBox.vgrow="ALWAYS" />
                        <HBox prefHeight="100.0" prefWidth="200.0" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="TOP_RIGHT" prefHeight="118.0" prefWidth="250.0">
                     <children>
                        <MFXButton fx:id="question" onAction="#handleQ" text="?">
                           <VBox.margin>
                              <Insets right="10.0" top="10.0" />
                           </VBox.margin>
                        </MFXButton>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <AnchorPane fx:id="mapPane" prefHeight="402.0" prefWidth="788.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </center>
   <bottom>
      <AnchorPane prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefWidth="800.0">
               <children>
                  <HBox fx:id="buttonsHBox" alignment="BOTTOM_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="800.0" VBox.vgrow="ALWAYS">
                     <children>
                        <MFXButton fx:id="clearButton" onAction="#handleButtonClear" prefWidth="100.0" text="Clear" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </MFXButton>
                        <MFXButton fx:id="backButton" onAction="#handleBackButton" prefWidth="100.0" text="Back" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </MFXButton>
                        <MFXButton fx:id="getPath" onAction="#handleGetPath" prefWidth="100.0" text="Get Path" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </MFXButton>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
