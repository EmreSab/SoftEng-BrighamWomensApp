            </Text>
         </top>
         <right>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="45.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <MFXButton fx:id="back" onAction="#handleBack" prefWidth="100.0" text="Back">
